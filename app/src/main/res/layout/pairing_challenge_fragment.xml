<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="normal"
    android:id="@+id/frame"
    android:gravity="center_vertical"
    >

    <co.ledger.wallet.widget.PinTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/pin_view"
        android:imeOptions="actionNext"
        android:digits="0123456789ABCDEFabcdef"
        android:inputType="textNoSuggestions"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:id="@+id/challenge_box"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignTop="@+id/pin_view"
        android:layout_alignLeft="@+id/pin_view"
        android:layout_alignStart="@+id/pin_view"
        android:layout_alignBottom="@+id/pin_view"
        android:layout_alignRight="@+id/pin_view"
        android:layout_alignEnd="@+id/pin_view">

        <co.ledger.wallet.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/huge_font_size"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/dark_grey"
            app:fontStyle="light"
            android:text=""/>
        <co.ledger.wallet.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/huge_font_size"
            app:fontStyle="light"
            android:text=""/>
        <co.ledger.wallet.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/huge_font_size"
            app:fontStyle="light"
            android:text=""/>
        <co.ledger.wallet.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/huge_font_size"
            app:fontStyle="light"
            android:text=""/>
    </LinearLayout>

    <co.ledger.wallet.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_dongle_instruction_step_3_bottom"
        android:id="@+id/bottom_text"
        android:textSize="@dimen/small_font_size"
        android:textColor="@color/soft_grey"
        android:layout_marginTop="@dimen/large_margin"
        android:gravity="center"
        app:kerning="@dimen/medium_font_spacing"
        android:layout_below="@+id/pin_view"
        android:layout_alignLeft="@+id/pin_view"
        android:layout_alignStart="@+id/pin_view"
        android:layout_alignRight="@+id/pin_view"
        android:layout_alignEnd="@+id/pin_view" />

</RelativeLayout>