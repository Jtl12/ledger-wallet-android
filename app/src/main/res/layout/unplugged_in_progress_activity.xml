<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/workflow_header" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/progress"
            android:indeterminate="true"
            android:layout_gravity="center_horizontal" />

        <com.ledger.ledgerwallet.widget.TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unplugged_in_progress_configuration"
            android:textSize="@dimen/medium_font_size"
            app:kerning="@dimen/medium_font_spacing"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_gravity="center_horizontal" />

        <com.ledger.ledgerwallet.widget.TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:text="@string/unplugged_in_progress_please_wait"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:textSize="@dimen/small_font_size"
            android:textColor="@color/dark_grey"
            android:gravity="center"
            app:kerning="@dimen/small_font_spacing"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>