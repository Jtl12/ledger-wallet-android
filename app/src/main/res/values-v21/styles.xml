<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_color</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
    </style>

    <style name="Base.ButtonStyle">
        <item name="android:stateListAnimator">@anim/button_elevation</item>
    </style>

    <style name="Base.FloatingActionButton" parent="Base.ButtonStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:elevation">1dp</item>
    </style>

</resources>