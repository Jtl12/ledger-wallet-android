<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fontStyle">
        <flag name="light" value="0" />
        <flag name="regular" value="1" />
        <flag name="semiBold" value="2" />
        <flag name="bold" value="3" />
        <flag name="extraBold" value="4" />
        <flag name="italic" value="5" />
    </attr>

    <attr name="fontFamily">
        <enum name="OpenSans" value="0" />
    </attr>

    <attr name="kerning" format="dimension" />

    <declare-styleable name="TextView">
        <attr name="fontStyle"/>
        <attr name="fontFamily"/>
        <attr name="kerning" />
    </declare-styleable>

    <declare-styleable name="PinTextView">
        <attr name="numberOfDigits" format="integer" />
    </declare-styleable>

    <declare-styleable name="EditText">
        <attr name="fontStyle"/>
        <attr name="fontFamily"/>
        <attr name="kerning" />
    </declare-styleable>

</resources>