<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fontStyle">
        <flag name="regular" value="regular" />
        <flag name="bold" value="bold" />
        <flag name="italic" value="italic" />
        <flag name="extra-bold" value="extra-bold" />
        <flag name="semi-bold" value="semi-bold" />
        <flag name="light" value="light" />
    </attr>

    <attr name="fontFamily">
        <enum name="Open Sans" value="opensans" />
    </attr>

    <declare-styleable name="TextView">
        <attr name="fontStyle"/>
        <attr name="fontFamily"/>
    </declare-styleable>

</resources>