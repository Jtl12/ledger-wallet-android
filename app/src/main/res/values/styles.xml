<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/Base.TextViewStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/bg_window</item>
    </style>

    <style name="DefaultActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/primary_color</item>
    </style>

    <style name="DefaultActionPopupStyle" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="ActionBarTitleViewStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BigActionBarTitleViewStyle" parent="ActionBarTitleViewStyle">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="Base">

    </style>

    <style name="Base.ButtonStyle">

    </style>

    <style name="Base.FloatingActionButton" parent="Base.ButtonStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="Base.MiniFloatingActionButton" parent="Base.FloatingActionButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="GreenFloatingActionButton" parent="Base.FloatingActionButton">
        <item name="android:background">@drawable/bg_green_fab</item>
    </style>

    <style name="Base.TextViewStyle">

    </style>

    <style name="RoundedButtonStyle" parent="Base.FlatButtonStyle">
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
        <item name="android:paddingTop">@dimen/almost_very_small_margin</item>
        <item name="android:paddingBottom">@dimen/almost_very_small_margin</item>
        <item name="kerning">@dimen/medium_font_spacing</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="RoundedGreyButtonStyle" parent="RoundedButtonStyle">
       <item name="android:background">@drawable/bg_grey_button</item>
    </style>

    <style name="RoundedGreenButtonStyle" parent="RoundedButtonStyle">
        <item name="android:background">@drawable/bg_green_button</item>
    </style>

</resources>
